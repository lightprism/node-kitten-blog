<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        Blog App
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog) { %>
                <div class="item">
                    <div class="image"><img src="<%= blog.image %>"></div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span>Created On: <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <%- blog.body.substring(0, 100) %>...
                        </div>
                        <div class="extra">
                            <a class="ui right labeled icon black button" href="/blogs/<%= blog._id %>">
                              Read More
                              <i class="icon small right chevron"></i>
                            </a>  
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>


